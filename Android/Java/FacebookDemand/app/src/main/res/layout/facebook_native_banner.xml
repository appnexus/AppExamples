<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:id="@+id/fb_native_ad_container">

    <com.facebook.ads.NativeAdLayout
        android:id="@+id/fb_native_ad_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fb_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:contentDescription="Ad Icon"
                />

            <TextView
                android:id="@+id/fb_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorCharcoal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/fb_icon"
                android:layout_alignTop="@id/fb_icon"
                tools:text="Ad Title"/>

            <ImageView
                android:id="@+id/fb_media"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:contentDescription="Ad Media"
                android:layout_below="@id/fb_icon"
                />

            <TextView
                android:id="@+id/fb_social_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorCharcoal"
                android:textSize="14sp"
                android:layout_margin="8dp"
                android:layout_below="@id/fb_media"
                tools:text="Social Context"/>

            <Button
                android:id="@+id/fb_cta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorCoral"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:layout_below="@id/fb_social_context"
                android:layout_centerHorizontal="true"
                tools:text="Install"/>

            <TextView
                android:id="@+id/fb_sponsored_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorCharcoal"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/fb_cta"
                android:layout_centerHorizontal="true"
                tools:text="Sponsored"/>

            <RelativeLayout
                android:id="@+id/fb_ad_choices_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </com.facebook.ads.NativeAdLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
